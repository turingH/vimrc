set nocompatible
	
set number

set background=dark

syntax on

set autoindent 

set smartindent

set tabstop=4

set shiftwidth=4

set cursorline

set hlsearch

set incsearch

set nobackup

set ignorecase

set enc=utf-8
set fencs=utf-8,ucs-bom,shift-jis,gb18030,gbk,gb2312,cp936i

execute pathogen#infect()
filetype plugin indent on
